/*================ Color Variables ================*/
:root {
  --black: #000000;
  --white: #ffffff;
  --greyverylight: #f6f6f6;
  --greylight: #D9D9D9;
  --grey: #dddcdc;
  --pink: #ff5cc5;
  --green: #cdffa0;
  --lightgreen: #cfff7c;
}
/*================ Sizing Variables ================*/
.boxed {
  max-width: 1170px;
  margin: 0 auto;
  display: block;
}
.mega-title {
  font-size: 180pt;
  font-family: 'HelveticaNeue-Medium';
}
.title {
  font-size: 80pt;
  font-family: 'HelveticaNeue-Medium';
}
.title-description {
  font-size: 36pt;
  font-family: 'HelveticaNeue';
}
.title-click {
  font-size: 24pt;
  font-family: 'HelveticaNeue-Medium';
  text-decoration: underline;
}
.image-description {
  font-size: 16pt;
  font-family: 'HelveticaNeue';
}
.image-description--medium {
  font-size: 16pt;
  font-family: 'HelveticaNeue-Medium';
}
a {
  font-family: 'HelveticaNeue-Medium';
  text-decoration: underline;
  transition-duration: 0.2s;
  color: #000;
}
a:hover {
  color: --pink;
  transition-duration: 0.2s;
}
a:visited {
  font-family: 'HelveticaNeue-Bold';
  text-decoration: underline;
}
a.disabled {
  color: --grey;
  pointer-events: none;
}
a.btn {
  background: --black;
  color: --white;
  text-transform: uppercase;
  text-align: center;
  border: 1px solid --black;
  padding: 15px 20px;
}
a.btn:hover {
  background: --pink;
  color: --black;
  border: 1px solid --pink;
}
a.btn:visited {
  background: --pink;
  color: --black;
  border: 1px solid --pink;
}
a.btn.disabled {
  background: --grey;
  color: --greylight;
  border: 1px solid --grey;
}
.selection {
  color: --black;
  font-size: 20pt;
  text-align: center;
  border: 1px solid transparent;
  padding: 15px 20px;
}
.selection:hover {
  border: 1px solid --pink;
}
.selection:visited {
  border: 1px solid --black;
}
